{
    "build_debug": {
        "description": "Build debug bot",
        "working_dir": "./build/Debug",
        "scripts": [
            "cmake ../.. -B . -DBUILD_BOT=ON -DCMAKE_BUILD_TYPE=Debug",
            "cmake --build . --target BOT --parallel",
            "chmod 777 bot/BOT || true"
        ]
    },
    "build_release": {
        "description": "Build release bot",
        "working_dir": "./build/Release",
        "scripts": [
            "cmake ../.. -B . -DBUILD_BOT=ON -DNDEBUG=1 -DCMAKE_BUILD_TYPE=Release",
            "cmake --build . --target BOT --parallel",
            "chmod 777 bot/BOT || true"
        ]
    },
    "up": {
        "description": "Up bot container",
        "scripts": [
            "docker compose up -d bot"
        ]
    },
    "stop": {
        "description": "Stop bot container",
        "scripts": [
            "docker compose stop -t 1 bot"
        ]
    },
    "remove": {
        "description": "Remove bot container",
        "scripts": [
            "docker compose rm -sfv bot"
        ]
    },
    "logs": {
        "description": "All logs bot container",
        "scripts": [
            "docker compose logs -f bot"
        ]
    },
    "logs20": {
        "description": "Logs bot container (20 lines)",
        "scripts": [
            "docker compose logs --tail 20 -f bot"
        ]
    }
}