{
    "build": {
        "description": "Build bot",
        "scripts": [
            "@@ conan build",
            "cmake -B ./build -DBUILD_BOT=ON",
            "cmake --build ./build --target BOT",
            "chmod 777 ./build/BOT || true"
        ]
    },
    "run": {
        "description": "Run ./build/BOT",
        "scripts": [
            "./build/BOT"
        ]
    },
    "build_and_run": {
        "description": "Build bot and run ./build/BOT",
        "scripts": [
            "@@ bot build",
            "@@ bot run"
        ]
    }
}