{
  "up": {
    "description": "Up bot container",
    "scripts": [
      "docker compose up -d bot"
    ]
  },
  "stop": {
    "description": "Stop postgres container",
    "scripts": [
      "docker compose stop -t 1 postgres"
    ]
  },
  "remove": {
    "description": "Remove postgres container",
    "scripts": [
      "docker compose rm -sfv postgres"
    ]
  },
  "logs": {
    "description": "All logs postgres container",
    "scripts": [
      "docker compose logs -f postgres"
    ]
  },
  "logs20": {
    "description": "Logs postgres container (20 lines)",
    "scripts": [
      "docker compose logs --tail 20 -f postgres"
    ]
  },
  "remove_data": {
    "description": "Remove volume with postgres data",
    "scripts": [
      "docker volume rm ${COMPOSE_PROJECT_NAME}_postgres_data"
    ]
  },
  "recreate_data": {
    "description": "Stop postgres container. Remove data. Up container",
    "scripts": [
      "@@ postgres stop",
      "@@ postgres remove",
      "@@ postgres remove_data",
      "@@ postgres up"
    ]
  }
}